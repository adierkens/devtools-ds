{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "jsx": "react",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@devtools-ds/node": ["dist/packages/node"],
      "@devtools-ds/object-parser": ["dist/packages/object-parser"],
      "@devtools-ds/themes": ["dist/packages/themes"],
    }
  },
  "exclude": ["node_modules", "tmp"]
}
